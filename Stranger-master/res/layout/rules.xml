<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC0CB"
    android:orientation="vertical"
    android:textAlignment="center" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@string/com_facebook_placepicker_subtitle_format"
        android:text="Rules"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#7CFC00"
        android:textSize="70sp"
        android:textStyle="italic"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The rules are simple!"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textColor="#0000FF"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="30sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="No asking the other persons gender/race/religion/age or education."
            android:textColor="#0000FF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Just have a fun open conversation with your stranger with no judgements or steryotypes!"
            android:textColor="#0000FF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Absolutly No insults will be tolerated!"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="First time is a 1 hour ban second is a perminate facebook block."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Be respectful and"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFF00"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="40dp" />
        
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="have fun!"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFF00"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="40dp" />

</LinearLayout>
